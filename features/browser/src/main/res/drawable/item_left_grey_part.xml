<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:topLeftRadius="9dp" android:bottomLeftRadius="9dp" />
                </shape>
            </item>
            <item android:top="1dp" android:left="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp" />
                    <gradient android:angle="90" android:startColor="@color/grey" android:endColor="@color/light_grey" android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>