<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:paddingBottom="8dp">

    <View
        android:id="@+id/found_video_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/item_left_grey_part"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/found_video_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/found_video_bottom_space" />

    <TextView
        android:id="@+id/found_video_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/found_video_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/found_video_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        app:layout_constraintTop_toBottomOf="@id/found_video_name"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/found_video_toolbar"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@drawable/item_right_black_part"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/found_video_bottom_space" />

    <ImageView
        android:id="@+id/found_video_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_ripple_circle"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_delete_white_24dp"
        app:layout_constraintStart_toStartOf="@id/found_video_toolbar"
        app:layout_constraintTop_toTopOf="@id/found_video_toolbar"
        app:layout_constraintEnd_toEndOf="@id/found_video_toolbar" />

    <ImageView
        android:id="@+id/found_video_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_ripple_circle"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_more_vert_white_24dp"
        app:layout_constraintTop_toBottomOf="@id/found_video_delete"
        app:layout_constraintStart_toStartOf="@id/found_video_toolbar"
        app:layout_constraintEnd_toEndOf="@id/found_video_toolbar" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/found_video_bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="found_video_size,found_video_more"
        app:barrierDirection="bottom" />

    <Space
        android:id="@+id/found_video_bottom_space"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="@id/found_video_bottom_barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>