<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lesser_black"
    android:padding="16dp">

    <ImageView
        android:id="@+id/found_video_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/yellow_icon_background"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_video_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/found_video_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:text="Hello World"
        app:layout_constraintStart_toEndOf="@id/found_video_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/found_video_more" />

    <TextView
        android:id="@+id/found_video_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:text="300MB"
        android:fontFamily="serif-monospace"
        app:layout_constraintTop_toBottomOf="@id/found_video_name"
        app:layout_constraintStart_toEndOf="@id/found_video_icon" />

    <ImageView
        android:id="@+id/found_video_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_ripple_circle"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_unfold_more_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>