        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/white"
                android:width="1dp" />
            <solid android:color="@color/lesser_black" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/white"
                android:width="1dp" />
            <solid android:color="@color/lesser_black" />
            <padding
                android:top="4dp"
                android:left="8dp"
                android:bottom="2dp"
                android:right="4dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
